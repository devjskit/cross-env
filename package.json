{
  "name": "@whatskit/cross-env",
  "version": "0.1.0",
  "homepage": "https://github.com/whatskit/cross-env#readme",
  "description": "Run scripts that set and use environment variables across platforms",
  "repository": "https://github.com/whatskit/craco-esbuild",
  "prettier": "prettier-config-whatskit",
  "author": "Billgo <hi@billgo.me>",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "lint": "kcd-scripts lint",
    "setup": "npm install && npm run validate -s",
    "test": "kcd-scripts test",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "validate": "kcd-scripts validate"
  },
  "bin": {
    "cross-env": "src/bin/cross-env.js",
    "cross-env-shell": "src/bin/cross-env-shell.js"
  },
  "files": [
    "src",
    "!__tests__"
  ],
  "dependencies": {
    "cross-spawn": "^7.0.1"
  },
  "devDependencies": {
    "kcd-scripts": "^5.5.0"
  },
  "eslintConfig": {
    "extends": "./node_modules/kcd-scripts/eslint.js"
  },
  "// babel 1": "this disables all built-in plugins from kcd-scripts for tests",
  "// babel 2": "that way we ensure that the tests run without compilation",
  "// babel 3": "because this module is published as-is. It is not compiled.",
  "babel": {},
  "engines": {
    "node": ">=10.14",
    "npm": ">=6",
    "yarn": ">=1"
  }
}
